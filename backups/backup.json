{
    "manifest_version": 3,
    "name": "Job Tracker Challenge",
    "author": "WhiteRa66it",
    "version": "1.0",
    "description": "Track your job applications",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "html/popup.html",
      "default_title": "Job Search Challenge",
      
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/content.js"]
      }
    ]
  }
  